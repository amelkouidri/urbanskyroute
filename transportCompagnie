  <!-- Fenêtre modale d'ajout de transport -->
  <div class="modalAjoutTransport" id="modalAjoutTransport">
    <h2>Ajouter un transport</h2>
    <form>
      <label for="typeTransport-ajout">Type de transport:</label>
      <input type="text" id="typeTransport-ajout" required>
  
      <label for="nombrePassagers-ajout">Nombre de passagers:</label>
      <input type="number" id="nombrePassagers-ajout" required>
  
      <div class="buttons">
        <button type="button" onclick="sauvegarderAjoutTransport()">Enregistrer</button>
        <button type="button" class="cancel-btn" onclick="annulerAjoutTransport()">Annuler</button>
      </div>
    </form>
  </div>
  
  <!-- Fenêtre modale de modification de transport -->
  <div class="modalModifTransport" id="modalModifTransport">
    <h2>Modifier le transport</h2>
    <form>
      <label for="typeTransport-modifier">Type de transport:</label>
      <input type="text" id="typeTransport-modifier" required>
  
      <label for="nombrePassagers-modifier">Nombre de passagers:</label>
      <input type="number" id="nombrePassagers-modifier" required>
  
      <div class="buttons">
        <button type="button" onclick="sauvegarderModificationTransport()">Enregistrer</button>
        <button type="button" class="cancel-btn" onclick="annulerModificationTransport()">Annuler</button>
      </div>
    </form>
  </div>
  
  <script>
    function ajouterTransport() {
      document.getElementById('modalAjoutTransport').style.display = 'block';
    }
  
    function sauvegarderAjoutTransport() {
      var typeTransport = document.getElementById('typeTransport-ajout').value;
      var nombrePassagers = parseInt(document.getElementById('nombrePassagers-ajout').value, 10);
  
      // Retirer la classe 'champ-vide' de tous les champs
      var champs = [document.getElementById('typeTransport-ajout')];
      champs.forEach(function (champ) {
        champ.classList.remove('champ-vide');
      });
  
      // Vérifications des données
      if (!typeTransport || isNaN(nombrePassagers) || nombrePassagers < 0) {
        alert("Veuillez remplir tous les champs correctement.");
  
        // Ajouter la classe 'champ-vide' aux champs vides
        champs.forEach(function (champ) {
          if (!champ.value.trim()) {
            champ.classList.add('champ-vide');
          }
        });
  
        return;
      }
  
      // Appliquer les modifications au transport (vous devrez implémenter cette logique)
      document.getElementById('modalAjoutTransport').style.display = 'none';
      alert("L'ajout a été enregistré avec succès!");
    }
  
    function modifierTransport(transportId) {
      // Code pour récupérer les détails du transport avec transportId
      var transport = {
        typeTransport: "Type de transport initial",
        nombrePassagers: 3
      };
      // Remplacez les valeurs ci-dessus par celles que vous obtenez du transport avec transportId
      afficherFenetreModaleModif(transport);
    }
  
    function afficherFenetreModaleModif(transport) {
      // Remplissez le formulaire dans la fenêtre modale avec les détails du transport
      document.getElementById('typeTransport-modifier').value = transport.typeTransport;
      document.getElementById('nombrePassagers-modifier').value = transport.nombrePassagers;
      document.getElementById('modalModifTransport').style.display = 'block';
    }
  
    function sauvegarderModificationTransport() {
      // Récupérer les valeurs du formulaire dans la fenêtre modale
      var typeTransport = document.getElementById('typeTransport-modifier').value;
      var nombrePassagers = parseInt(document.getElementById('nombrePassagers-modifier').value, 10);
  
      // Retirer la classe 'champ-vide' de tous les champs
      var champs = [document.getElementById('typeTransport-modifier')];
      champs.forEach(function (champ) {
        champ.classList.remove('champ-vide');
      });
  
      // Vérifications des données
      if (!typeTransport || isNaN(nombrePassagers) || nombrePassagers < 0) {
        alert("Veuillez remplir tous les champs correctement.");
  
        // Ajouter la classe 'champ-vide' aux champs vides
        champs.forEach(function (champ) {
          if (!champ.value.trim()) {
            champ.classList.add('champ-vide');
          }
        });
  
        return;
      }
  
      // Appliquer les modifications au transport (vous devrez implémenter cette logique)
      document.getElementById('modalModifTransport').style.display = 'none';
      alert("Les modifications ont été enregistrées avec succès!");
    }
  
    function annuler() {
      document.getElementById('modalModifTransport').style.display = 'none';
      document.getElementById('modalAjoutTransport').style.display = 'none';
    }
  
    function supprimerTransport(transportId) {
      // Confirmation de la suppression
      var confirmation = confirm("Êtes-vous sûr de vouloir supprimer ce transport ?");
      if (confirmation) {
        // Code pour supprimer le transport avec transportId
        alert("Transport supprimé avec l'ID " + transportId);
      }
    }
  </script>
  
  

